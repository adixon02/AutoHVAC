# Geometry-First Configuration for Accurate HVAC Calculations
# This config prioritizes deterministic geometry extraction over AI vision

# Use traditional geometry extraction first, then enhance with AI
PARSING_MODE=traditional_first

# Trust geometry extraction for areas
GEOMETRY_AUTHORITATIVE=true

# Use GPT-4V only for room type classification, not area detection
USE_GPT4_VISION=true
GPT4V_FOR_CLASSIFICATION_ONLY=true

# Multi-floor processing
MULTI_FLOOR_ENABLED=true
MIN_FLOOR_PLAN_SCORE=100

# Don't generate fake rooms
ALLOW_GENERATED_SPACES=false

# Relax validation for AI-detected rooms
MIN_CONFIDENCE_THRESHOLD=0.3

# Scale detection
SCALE_FALLBACK=48
SCALE_OVERRIDE=

# Quality thresholds
MIN_QUALITY_SCORE=30

# Enable detailed logging
DEBUG=true
LOG_LEVEL=INFO