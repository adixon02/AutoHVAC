# AutoHVAC Backend Environment Variables
# Copy this file to .env and update with your values

# OpenAI API Key (required for AI blueprint parsing)
OPENAI_API_KEY=your-openai-api-key-here

# Stripe Configuration (optional - uses test keys by default)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# Redis Configuration (optional - for job queue)
REDIS_URL=redis://localhost:6379/0

# Environment
ENV=development

# Storage Configuration (for file uploads)
# For local development, you can use a local directory like ./uploads
# For production on Render, this will be set to /var/data/uploads
RENDER_DISK_PATH=./uploads