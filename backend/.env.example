# AutoHVAC Backend Environment Variables
# Copy this file to .env and update with your values

# OpenAI API Key (required for AI blueprint parsing)
OPENAI_API_KEY=your-openai-api-key-here

# Stripe Configuration (REQUIRED for payment processing)
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
# For test mode (default):
STRIPE_SECRET_KEY=sk_test_...  # Your Stripe secret key (starts with sk_test_ for test mode)
STRIPE_PUBLISHABLE_KEY=pk_test_...  # Your Stripe publishable key (starts with pk_test_ for test mode)
STRIPE_WEBHOOK_SECRET=whsec_...  # Webhook endpoint secret from Stripe dashboard
STRIPE_PRICE_ID=price_...  # Your product price ID from Stripe (create in Products section)

# Optional: Set to "live" for production (defaults to "test")
# STRIPE_MODE=test

# Redis Configuration (optional - for job queue)
REDIS_URL=redis://localhost:6379/0

# Environment
ENV=development

# Blueprint Parsing Configuration
# PARSING_MODE options: "traditional_first" (default), "ai_first", "traditional_only"
# traditional_first: Extract geometry/text first, detect rooms, then enhance with AI
# ai_first: Try GPT-4V first, fall back to traditional if it fails
# traditional_only: Skip AI entirely, only use geometry/text extraction
PARSING_MODE=traditional_first

# Minimum confidence threshold for parsing results (0.0-1.0)
# If confidence is below this, user intervention will be requested
MIN_CONFIDENCE_THRESHOLD=0.6

# Require OCR for text extraction (set to false if OCR is not available)
REQUIRE_OCR=false

# Manual scale override (in pixels per foot, e.g., 48 for 1/4"=1')
# Leave empty to auto-detect scale
# SCALE_OVERRIDE=48

# Storage Configuration (for file uploads)
# For local development, you can use a local directory like ./uploads
# For production on Render, this will be set to /var/data/uploads
RENDER_DISK_PATH=./uploads