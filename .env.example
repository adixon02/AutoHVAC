# AutoHVAC Environment Configuration Template
# Copy this file to .env and fill in your values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Configuration (Required for billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_price_id_here

# Database Configuration (Docker Compose will set these)
DATABASE_URL=postgresql://autohvac:autohvac@postgres:5432/autohvac
REDIS_URL=redis://redis:6379/0

# Storage Configuration (Render deployment)
RENDER_DISK_PATH=/var/data  # Set by Render, don't change

# Storage Cleanup Configuration
STORAGE_CLEANUP_ENABLED=true          # Enable/disable automated cleanup
TEMP_RETENTION_HOURS=6                # Hours to keep temporary files
UPLOAD_RETENTION_DAYS=30              # Days to keep uploaded PDFs
PROCESSED_RETENTION_DAYS=90           # Days to keep processed data

# Environment Settings
ENVIRONMENT=development  # development | production
DEBUG=true              # Enable debug logging

# Pipeline V3 Configuration
# Note: Pipeline V3 automatically uses GPT-4o for blueprint analysis
# Note: Local development uses in-memory job storage, production uses Redis

# PDF Generation (Optional)
DISABLE_PDF=false       # Set to true to skip PDF generation in dev
WKHTMLTOPDF_PATH=/usr/local/bin/wkhtmltopdf

# Email Configuration (Optional)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000  # Update for production
EOF < /dev/null